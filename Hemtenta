using System;

namespace GameGenerator
{
    class Program
    {
        static void Main(string[] args)

        {


            Random Random = new Random(); //in charge of generating random numbers 
            bool correctGuess = true; //set to false, alltså är det felgissning.
            int max = 100;// en lek mellan 1 - 100
            int min = 1;
            int randomNum = Random.Next(min, max + 1);//plus ett pga annars blir det 99
            string responses;

            Console.WriteLine("Roses are red and voilets are blue, here is a game made just for you.");
            Console.WriteLine("Guess the correct number and you will win, ");
            Console.WriteLine("Guess wrong ten times, and you fail. ");

            while (correctGuess) //is false, keep playing
            {
                Console.Write("Guess number: ");
                int guess = Convert.ToInt32(Console.ReadLine());//det spelaren gissar hamnar inuti "guess" varible

                //  tries = Console.ReadLine();// hur gör jag så den skriver ut vilken guess jag är på?

                if (correctGuess)
                {
                    correctGuess = Int32.TryParse(guess, out guess);//fattar ej varför guess inte funkar, har declarat det där uppe någonstans och convert to int

                    Console.WriteLine(guess);
                }

                else

                { Console.WriteLine("Incorrect Value, please try again."); }

                if (guess < randomNum)
                {
                    Console.WriteLine(guess + " is too low");
                }
                
                else if (guess > randomNum)
                {
                    Console.WriteLine(guess + " is too high");
                }
                
                else
                {
                    guess++;


                    Console.WriteLine("YOU WIN");
                    //  Console.WriteLine("You've guessed "* + tries + " times"); //Hur får man in tries?
                    Console.WriteLine("Do you wish to play again? Y/N");

                    responses = Console.ReadLine();
                    responses = responses.ToUpper();

                    if (responses == ("Y"))
                    {
                        correctGuess = true;
                    }

                }
            }
        }
    }
}
